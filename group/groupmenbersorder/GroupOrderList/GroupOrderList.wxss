.order-item{
  background: #ffffff;
  margin-top: 20rpx;
  padding:0 30rpx;
  font-size:26rpx;
}
.order-item-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height:90rpx;
  border-bottom: 1px solid #eee;
}
.order-item-content{}
.content-product{
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.product-img{
  width:120rpx;
  height:120rpx;
  margin-right:20rpx;
  background: red;
}
.product-center{
  display: flex;
  justify-content: space-between;
  align-items: space-between;
  flex-flow: column wrap;
  flex: 1;
  overflow: hidden;
}
.product-content{
  flex: 1;
  font-size:25rpx;
  line-height:42rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.product-guige{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #999;
}
.product-right{
  min-width:140rpx;
  text-align:right;
  margin-left:20rpx;
}
.product-price{
  font-size:32rpx;
  color: #ff7c13;
}
.product-price::before{
  content:'￥';
  font-size: 27rpx;
}
.product-nums{
  color: #999;
}
.product-nums::before{
  content: 'x';
  font-size: 27rpx;
  color: #999;
}

.content-user{
  display: flex;
  padding: 10rpx 0;
  border-bottom: 1px solid #eee;
}

.user-left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width:550rpx;
  border-right: 1px solid #eee;
  height:100rpx;
}
.user-avatar{
  width: 60rpx;
  height: 60rpx;
  margin-right:20rpx;
  border-radius: 50%;
}
.view{
  flex:1;
}

.row{
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
}
.user-nickname{
  font-size:32rpx;
}
.user-phone{
  margin-left:10rpx;
  color:#999;
}
.user-remark{
  font-size:22rpx;
  color:red;
}
.user-address{
  font-size:22rpx;
  color:#999;
}
.user-right{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  flex-flow: column wrap;
  font-size:22rpx;
  color:#999;
}
.user-price2{
  font-size:32rpx;
  color:#09bb07;
}
.user-price2::before{
  content: '￥';
  font-size: 28rpx;
}


.order-item-footer{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
}
.footer-left{
  display: flex;
  align-items: baseline;
}
.footer-price{
  font-size: 36rpx;
  color: #ff7c13;
}
.footer-price::before{
  content:'￥';
}
small{
  font-size:.875em;
}
.footer-btns{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.btn{
  line-height:60rpx;
  padding:0 20rpx;
  border-radius:60rpx;
  border:#ff7c13 1px solid;
  color: #ff7c13;
  margin-left:10rpx;
  min-width: 80rpx;
  text-align: center;
}