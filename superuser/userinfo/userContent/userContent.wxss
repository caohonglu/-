.groupCard{
  
}
.grounCard-card{
  background: #AB9FFF;
  padding-top: 40rpx;
}
.card-top{
  display: flex;
  justify-content: center;
  align-items: flex-start;
  position: relative;
  font-size: 32rpx;
}
.top-leavel{
  display: flex;
  align-items: center;
}
.leavel-icon{
  width: 36rpx;
  height: 36rpx;
  margin: 10rpx;
}
.leavel-right{
  color: #777;
  margin-left: 20rpx;
}
.top-edit{
  position: absolute;
  right: 30rpx;
  top: 0rpx;
  font-size: 24rpx;
}
.card-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-flow: column nowrap;
  margin: 0 auto;
  position: relative;
  width: 686rpx;
  border-radius: 20rpx;
  height: 242rpx;
  padding: 30rpx 32rpx 20rpx 44rpx;
  box-sizing: border-box;
  background: #8a90a0;
}
.info-top{
  display: flex;
  width: 100%;
}
.info-avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.info-center{
  font-size: 28rpx;
  flex: 1;
  margin-left: 44rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.info-bg{
  position: absolute;
  left: 0;
  top: 0;
  width: 686rpx;
  height: 242rpx;
  z-index: -1;
}
.info-name{

}
.info-area{

}
.info-btn{
  font-size: 24rpx;
  border-radius: 50rpx;
  border: 1px solid #ffffff;
  padding: 5rpx 20rpx;
}
.info-bottom{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
}
.info-bottom-item{
  font-size: 24rpx;
  text-align: center;
}
.info-price{
  font-size: 44rpx;
}
.info-bottom-btn{
  background: #dfdfdf;
  color: #4D515E;
  font-size: 28rpx;
  line-height: 62rpx;
  width: 116rpx;
  height: 62rpx;
  border-radius: 50rpx;
}
.bottom{
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 40rpx;
  padding: 34rpx 0 32rpx 0;
}
.bottom-item{
  text-align: center;
}
.bottom-price{

}
.bottom-label{
  font-size: 24rpx;
}

.group{
  background: #ffffff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 36rpx 20rpx 38rpx 20rpx;
  text-align: center;
}
.group-item{

}
.group-number{
  font-size: 36rpx;
}
.group-label{
  font-size: 24rpx;
  color: #B3B3B3;
}