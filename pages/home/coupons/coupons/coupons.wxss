/* pages/coupons/coupons/coupons.wxss */
page{
  border-top:1px solid #eee;
}
.coupons{
  padding:15rpx 50rpx;
}
.coupons-item{
  background:#fff2e6;
  color:#ff952e;
  display:flex;
  border-radius:7.5rpx;
  margin-bottom:15rpx;
}

.guoqi{
  filter: grayscale(100%);
}

.coupons-item-left{
  padding:20rpx 40rpx;
  flex:1;
}
.coupons-item-text{
  display:flex;
  font-size:22.5rpx;
  align-items:flex-end;
}
.coupons-item-price{
  font-size:37.5rpx;
  margin-right:7.5rpx;
}
.coupons-item-total_price{
  font-size:22.5rpx;
}
.coupons-item-time{
  font-size:22.5rpx;
}
.coupons-item-right{
  width:225rpx;
  display:flex;
  justify-content:center;
  align-items:center;
  font-size:30rpx;
  border-left:1px dotted #ff952e;
  position:relative;
}

.coupons-item-right:after{
  content:'';
  position:absolute;
  width:30rpx;
  height:30rpx;
  background:#ffffff;
  border-radius:50%;
  top:-15rpx;
  left:-15rpx;
}
.coupons-item-right:before{
  content:'';
  position:absolute;
  width:30rpx;
  height:30rpx;
  background:#ffffff;
  border-radius:50%;
  bottom:-15rpx;
  left:-15rpx;
}
.to-coupons-center{
  display: flex;
  justify-content: center;
  align-items: center;
  padding:20rpx;
  margin-top:30rpx;
}

.to-coupons-center-item{
  background-color:#ff5903;
  color:#fff;
  border-radius: 30rpx;
  font-size: 30rpx;
  padding:10rpx 30rpx;
}
