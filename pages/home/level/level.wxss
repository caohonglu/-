page{
  background: #f8f8f8;
}
.card{
  padding: 40rpx 52rpx 0;
  position: relative;
  overflow: hidden;
}
.card-bg{
  position: absolute;
  left: 52rpx;
  top: 40rpx;
  width: 646rpx;
  height: 322rpx;
  z-index: -1;
}
.card-info{
  width: 646rpx;
  height: 322rpx;
  overflow: hidden;
}
.card-user-info{
  padding: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #fff;
}
.card-user-avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.card-user-name{
  font-size: 28rpx;
}
.card-user-level{
  font-size: 20rpx;
}

.card-center{
  display: flex;
  justify-content: center;
  align-items: center;
}
.card-center-text{
  font-size: 40rpx;
  color: #ffffff;
  margin-left: 12rpx;
  font-weight: bold;
}


.equities{
  padding: 38rpx;
  margin-top: 46rpx;
  background: #ffffff;
}
.equities-header{
  display: flex;
  align-items: center;
  font-size: 40rpx;
}
.equities-header::before{
  content: ' ';
  display: inline-block;
  width: 10rpx;
  height: 50rpx;
  background: #ffc775;
  margin-right: 16rpx;
}
.equities-content{
  margin-top: 26rpx;
  padding: 0 26rpx;
  font-size: 28rpx;
}

/*会员等级进度区域*/
.level{
  padding: 28rpx 38rpx 22rpx 46rpx;
  background: #ffffff;
  margin-top: 46rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.level-left{
  margin-right: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column wrap;
}
.level-left-text{
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #868686;
}
.level-left-nextlevel{
  font-size: 40rpx;
}
.level-center{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column wrap;
  margin-right: 26rpx;
}
.level-center-top{
  font-size: 28rpx;
  color: red;
}
.level-center-top::before{
  content: '当前已消费';
  color: #101010;
}
.level-center-top::after{
  content: '元';
  color: #101010;
}
.level-center-center{
  background: #ffbfc1;
  height: 38rpx;
  width: 100%;
  border-radius: 50rpx;
  overflow: hidden;
}
.level-center-center-current{
  height: 38rpx;
  border-radius: 50rpx;
  background: #ff686e;
}
.level-center-bottom{
  font-size: 28rpx;
  color: red;
}
.level-center-bottom::before{
  content: '升级还需消费';
  color: #101010;
}
.level-center-bottom::after{
  content: '元';
  color: #101010;
}
.level-right{

}
.level-right-percent{
  font-size: 28rpx;
}