/* pages/login/login.wxss */
.login{
  background-color:rgba(0,0,0,0.6);
  width: 750rpx;
  height: 100vh;
  position: fixed;
  top: 0rpx;
  left:0rpx;
  z-index: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-view{
  width:600rpx;
  height:800rpx;
  background:#ffffff;
  border-radius:20rpx;
  
  display: flex;
  flex-flow: column wrap;
  justify-content: flex-start;
  align-items: center;
}

.login-view-logo{
  width:500rpx;
  height:417rpx;
  margin-top:40rpx;
}

.login-view-text{
  text-align:center;
  font-size:34rpx;
  margin:20rpx 40rpx;
  color:#000;
  letter-spacing:4rpx;
  line-height:60rpx;
}

.login-view-prompt{
  font-size:26rpx;
  margin-bottom:25rpx;
  color:#a2a2a2;
}


.login-view-btn{
  width:500rpx;
  color:#ffffff;
  background: linear-gradient(#ff314d,#fa4059)
}