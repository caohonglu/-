/* pages/shopCart/header/header.wxss */
.header{
  display:flex;
  justify-content:center;
  align-items:center;
  padding:0 20rpx;
  border-top:1px solid #eeeeee;
  border-bottom:1px solid #eeeeee;
  background-color:#ffffff;
  position:fixed;
  top:0;
  left:0;
  width:710rpx;
  z-index:2;
  height:90rpx;
}
.title{
  font-size:30rpx;
}
.edit{
  position:absolute;
  right:0rpx;
  font-size:32rpx;
  padding:20rpx;
}

.del{
  display:flex;
  justify-content:space-between;
  align-items:center;
  width:750rpx;
  height:112.5rpx;
  background-color:#ffffff;
}
.flex-left{
  display:flex;
  padding-left:30rpx;
}

.flex-right{
  display:flex;
}