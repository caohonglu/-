/* pages/goodsItem/footer/footer.wxss */
.footer{
  position:fixed;
  bottom:0rpx;
  left:0rpx;
  width:750rpx;
  height:100rpx;
  display:flex;
  justify-content:flex-start;
  align-items:center;
  border-top:0px solid #eee;
  background-color: #ffffff; 
  z-index: 1;
}

.footer-menu{
  display:flex;
  justify-content:center;
  align-items:center;
  flex-flow:column wrap;
  flex:1;
  font-size:30rpx;
}

.footer-menu-img{
  width:37.5rpx;
  height:37.5rpx;
}
.footer-menu-text{
  font-size: 12px;
  color: #808080;
}

.footer-button{
  width:440rpx;
  height:100rpx;
  display:flex;
  justify-content:center;
  align-items:center;
  text-align:center;
  overflow:hidden;
  font-size:30rpx;
  color:#fff;
  font-weight: bold;
}
.footer-button-left{
  background:red;
  height:100%;
  flex:1;
  display:flex;
  justify-content:center;
  align-items:center;
  background: #FFA726;
  border-right:1rpx solid #ccc;
}
.footer-button-right{
  background:green;
  height:100%;
  flex:1;
  display:flex;
  justify-content:center;
  align-items:center;
  background:linear-gradient(to right, #ff7301, #ff4b03);
}

.mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9;
  display: flex;
  justify-content: center;
}
.layer{
  background: #ffffff;
  width: 600rpx;
  position: absolute;
  top: 20vh;
  border-radius: 10rpx;
}
.layer-title{
  padding: 30rpx;
  text-align: center;
  border-bottom: 1px solid #f5f5f5;
}
.layer-content{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  padding: 15rpx 0;
  flex-flow: row wrap;
}
.content-item{
  padding: 10rpx 30rpx;
  margin: 20rpx;
  border: 1px solid #808080;
  font-size: 28rpx;
  border-radius: 50rpx;
  color: #808080;
}
.layer-footer{
  padding: 20rpx;
  font-size: 28rpx;
  text-align: right;
}
.layer-footer-btn{

}
.bind{
  color: #ffffff;
}


.group-btn{
  flex-flow: column wrap;
}