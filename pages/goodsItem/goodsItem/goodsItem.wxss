/* pages/goodsItem/goodsItem.wxss */
.goodsitem{
  padding-bottom:100rpx;
  background: #f8f8f8;
}

.rithtext{
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-flow:  column wrap;
  background: #fff;
  padding: 0 1mm;
  box-sizing: border-box;
  overflow: hidden;
}

.rithtext-title{
  padding: 34rpx;
  font-size: 35rpx;
  width: 750rpx;
  box-sizing: border-box;
  text-align: center;
  border-bottom: 1rpx solid #f8f8f8;

}

.mask{
	z-index:6;
	position:fixed;
	bottom:0vw;
	left:0vw;
	background:rgba(81,81,81, 0.8);
	width:100vw;
	height:100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.layer{
  background: #fff;
  bottom: 0;
  left: 0;
  width: 680rpx;
  box-sizing: border-box;
  padding: 72rpx 0;
  border-radius: 40rpx;
  position: relative;
  margin-bottom: 250rpx;
}
.layer-item{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.share-item{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column wrap;
  font-size: 28rpx;
  color: #101010;
}
.share-item:last-child{
  border-right: 0px solid #f2f2f2;
}
.close{
  position: absolute;
  top: -94rpx;
  width: 64rpx;
  height: 64rpx;
  left: 318rpx;
}
button{
  background: none;
  padding: 0;
  line-height: normal;
  border-radius: 0;
  border: 0;
}
.share-item-icon{
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.table{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-flow: row wrap;
}
.table-item{
  width: 50%;
  box-sizing: border-box;
  padding: 25rpx 34rpx;
  border: 1px solid #dadada;
  margin: 0 -1px -1px 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  color: #5a5a5a;
}

.live{
  position: fixed;
  top: calc(14vh + 100rpx);
  right: 30rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 24rpx;
  padding: 22rpx 10rpx;
  text-align: center;
}
.live-icon{
  width: 44rpx;
  height: 44rpx;
}
.live-label{
  color: #ffffff;
  font-size: 20rpx;
}