<view class='BPDL'>
  <block wx:for='{{data}}'>
    <view class='item'>
      <image class='item-avatar' src='{{item.avatar}}'></image>
      <view class='item-name'>
        <view class='name'>{{item.nickname[0]}}**{{item.nickname[item.nickname.length - 1]}}</view>
        <view class='number'>买了{{item.number}}份</view>
      </view>
      <view class='item-date'>{{item.format_create_time}}</view>
    </view>
  </block>
</view>