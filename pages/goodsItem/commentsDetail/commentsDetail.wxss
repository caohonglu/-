page{
  background:#f5f5f5;
}

.comments{
  margin-top: 2vw;
}

.comments-item{
  background:#fff;
  padding:2vw 4vw;
  display:flex;
  margin-bottom:2vw;
  justify-content:flex-start;
  align-items:flex-start;
  flex-flow:column wrap;
}
.comment-user{
  display:flex;
  align-items:center;
  justify-content:flex-start;
}
.comments-head{
  width:75rpx;
  height: 75rpx;
  border-radius:50%;
  margin-right:2vw;
}
.comment-time{
  display:flex;
  align-items:center;
  justify-content:flex-start;
  color:#aaa;
  font-size:3.5vw;
  margin:2vw 0vw;
}
.comment-data{
  
}
.comment-classification{
  margin-left: 2vw;
}
.comment-text{
  font-size:4vw;
  font-weight:500;
}
.comment-imgs{
  display:flex;
  flex-flow: row wrap;
  justify-content:flex-start;
  align-items:center;
}
.comment-img{
  width:30vw;
  height:30vw;
  margin:1vw 2vw 1vw 0vw;
}