.button{
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon{
  width:24px;
  height:24px;
  float:left;
  margin-right:10px;
  display:block;
  position:relative;
  top:3px;
}
.btn{
  display:inline-block;
  width:auto;
  margin:0 auto;
  padding:5px 20px;
  height:40px;
  border-radius:0;
  background-color:#00aaee;
}