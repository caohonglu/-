.view-title{
  height: 40px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #ffffff;
}
.title{
  flex: 1;
  display: flex;
  padding:5px 10px;
  position: relative;
}
.title .txt{
  box-sizing:border-box;
}
.style1{
  justify-content: flex-start;
  align-items: center;
}

.style2{
  justify-content: flex-start;
  align-items: center;
  padding-left: 38rpx;
  
}
.style2::before{
  position: absolute;
  width: 6rpx;
  content: '';  
  border-radius: 3px; 
  height: 1.5em; 
  background-color: #cd3637; 
  left: 10px; 
  top: 50%; 
  margin-top: -.75em;
}

.style3{
  justify-content: center;
  align-items: center;
}

.style4{
  padding-left: 54rpx;
}
.style4::before{
  content: ''; 
  width: 10px; 
  border-radius: 10px; 
  height: 10px; 
  border: #cd3637 1px solid; 
  left: 10px; 
  top: 50%; 
  margin-top: -5px; 
  position: absolute;
}
.style5{
  justify-content: space-around;
  align-items: center;
  padding: 5px 0;
}
.style5 .line{
  flex: 1;
  height: 1px;
  background: #cd3637;
}
.style5 .txt{
  margin: 0 5px;
}

.style6{
  justify-content: center;
  align-items: center;
  padding-bottom: 10px;
}

.style6::after{
  position: absolute;
  bottom:-7px;
  content: '';
  width: 0;
  height: 0;
  border: 7px solid;
  border-color: orange #fff #fff #fff;
}
.style7{
  align-items: center;
  justify-content: center;
}
.style7 .txt{
  padding:0 1.5em;
  position: relative;
}
.style7 .txt::before, .style7 .txt::after{
  position: absolute; 
  content: ''; 
  width: 1.2em; 
  height: 1.2em; 
  background: url("https://v.uicut.com/xcx-temp2019/20190410/title-block.png") center center no-repeat; 
  background-size: 100% 100%; 
  top: 50%; 
  margin-top: -.6em;
}
.style7 .txt::before{
  left: 0px;
}
.style7 .txt::after{
  right: 0px;
}
.style7 .line{
  width: 3em;
  height: 1px;
  background: #333;
  margin:0 5px;
}

.style8{
  justify-content: center;
  align-items: center;
}
.style8 .line{
  width: 3em;
  height: 1px;
  background: #333;
  margin:0 5px;
}
.style8 .txt{
  border-left:#333 1px solid;
  border-right:#333 1px solid;
  padding:0 5px;
  margin:0 5px;
}