.announcement{
  padding:5px 10px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.swiper{
  overflow: hidden;
  width: 100%;
  height: 40rpx;
}
.icon{
  width:24px;
  height:24px;
  margin-right:10px;
}
.item{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}
.announcement-item{
  display: flex;
  align-items: center;
}