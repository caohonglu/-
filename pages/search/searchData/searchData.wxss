.screen {
    overflow: hidden;
    background: #fff;
    padding: 24rpx 0;
}

.screen .left {
    overflow: hidden;
    float: left;
}

.left-item {
    float: left;
    line-height: 36rpx;
    text-align: center;
    width: 150rpx;
    font-size: 28rpx;
    color: #3c4245;
}

.on {
    color: #fa5908;
}

.screen .right {
    overflow: hidden;
    float: right;
}

.screen .right image {
    float: left;
    width: 38rpx;
    height: 36rpx;
    margin: 0 24rpx;
}

.screen .right view {
    float: left;
    line-height: 36rpx;
    text-align: center;
    width: 98rpx;
    font-size: 28rpx;
    color: #162c37;
    border-left: 2rpx solid #d2d2d2;
}

.list-transverse .item {
    background: #fff;
    border-radius: 20rpx;
    margin: 20rpx;
    position: relative;
    padding: 16rpx 16rpx 16rpx 250rpx;
}

.list-transverse image {
    width: 204rpx;
    height: 210rpx;
    position: absolute;
    left: 16rpx;
    top: 16rpx;
}

.list-transverse .right {
    height: 210rpx;
}

.list-transverse .right .name {
  line-height: 40rpx;
  font-size: 26rpx;
  color: #444;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.list-transverse .right .introduce {
  line-height: 40rpx;
  font-size: 26rpx;
  color: #909090;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.list-transverse .right .Sold {
    line-height: 24rpx;
    font-size: 20rpx;
    width: 120rpx;
    text-align: center;
    border: 2rpx solid #909090;
    color: #909090;
    border-radius: 12rpx;
    margin-top: 10rpx;
}

.list-transverse .right .price {
    overflow: hidden;
    margin-top: 40rpx;
}

.list-transverse .right .price .xian {
    float: left;
    font-size: 32rpx;
    font-weight: bold;
    color: #fe5802;
    margin-top: 10rpx;
}

.list-transverse .right .price .xian text {
    font-size: 20rpx;
}

.list-transverse .right .price .yuan {
    font-size: 20rpx;
    color: #bfbfbf;
    text-decoration: line-through;
    margin: 22rpx 0 0 10rpx;
    float: left;
}

.list-transverse .right .price .qiang {
    font-size: 24rpx;
    color: #fff;
    width: 146rpx;
    line-height: 50rpx;
    background: #fe5802;
    border-radius: 25rpx;
    float: right;
    text-align: center;
}

.list-vertical .item {
    background: #fff;
    margin: 20rpx 0 0 2%;
    position: relative;
    float: left;
    width: 47%;
    border-radius: 20rpx;
}

.list-vertical .item image {
    width: 100%;
    height: 344rpx;
    display: block;
    margin: 0 auto;
}

.list-vertical .item .right {
    padding: 20rpx;
}

.list-vertical .item .right .name {
    font-size: 26rpx;
    color: #444;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.list-vertical .item .right .price {
    overflow: hidden;
    margin-top: 10rpx;
}

.list-vertical .item .right .price .xian {
    font-size: 32rpx;
    font-weight: bold;
    color: #fe5802;
    float: left;
}

.list-vertical .item .right .price .xian text {
    font-size: 20rpx;
}

.list-vertical .item .right .price .yuan {
    font-size: 20rpx;
    color: #bfbfbf;
    margin-top: 12rpx;
    float: right;
}

.nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 99;
}
.nav-back{
  background: #fff;
  width: 750rpx !important;
}
.nav view {
    float: left;
    width: 20%;
    background: #fff;
    padding: 20rpx 0;
}

.nav view image {
    width: 74rpx;
    height: 74rpx;
    display: block;
    margin: 0 auto;
}

.nav view text {
    display: block;
    text-align: center;
    font-size: 30rpx;
    margin-top: 10rpx;
    color: #303030;
}
