page {
  background: #f6f6f6;
}

.search {
  margin: 20rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search .search-input {
  background: #fff;
  height: 76rpx;
  border-radius: 38rpx;
  padding: 0 70rpx 0 70rpx;
  font-size: 26rpx;
  color: #a09e9e;
  flex:1;
  position: relative;
}

.search .search-image {
  width: 38rpx;
  height: 39rpx;
  position: absolute;
  top: 18rpx;
  left: 20rpx;
}
.search-image-right{
  width: 38rpx;
  height: 39rpx;
  position: absolute;
  right: 155rpx;
}
.search .search-btn{
  margin-left: 20rpx;
  font-size: 23rpx;
  border: 1rpx solid #555;
  padding: 10rpx 30rpx;
  border-radius:35rpx;
}


.hide{
  opacity: 0;
}