page{
  background: #f3f3f3;
  padding-top: 34rpx;
}
.live-status{
  display: inline-block;
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  border-radius: 50rpx;
  background: rgba(0, 0, 0, 0.5);
  min-height: 32rpx;
  color: #ffffff;
  font-size: 20rpx;
}
.isover{
  padding: 5rpx 20rpx;
}
.live-status-item{
  display: flex;
  padding-right: 20rpx;
  align-items: center;
}
.live-status-item image{
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
}
.live-status-label{
  background: #27B148;
  border-radius: 50rpx;
  height: 100%;
  padding:5rpx 10rpx;
}
.live-status-date{
  margin-left: 10rpx;
}
.view{
  display: flex;
  align-items: center;
  margin: 0 22rpx 34rpx 22rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.left{
  width: 350rpx;
  height: 350rpx;
  margin-right: 24rpx;
  position: relative;
}
.left-icon{
  width: 350rpx;
  height: 350rpx;
}
.right{
  height: 350rpx;
}
.title{
  flex: 1;
  margin-top: 28rpx;
  font-weight: 800;
}
.flex{
  display: flex;
  align-items: center;
  margin: 28rpx 0;
}
.avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.name{
  color: #707070;
  font-size: 30rpx;
}
.right-bottom{
  height: 144rpx;
  overflow: hidden; 
  width: calc(288rpx + 22rpx);
  display: flex;
}
.img{
  position: relative;
  height: 144rpx;
  margin-right: 22rpx; 
  width: 144rpx;
  border: 1px solid #f5f5f5;
  box-sizing: border-box;
  border-radius: 10rpx;
  overflow: hidden;
}
.img-icon{
  position: absolute;
  height: 144rpx;
  width: 144rpx;
  left: 0;
  top: 0;
}
.price{
  position: absolute;
  left: 0;
  bottom: 0;
  color: #ffffff;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.5);
  width: 144rpx;
}