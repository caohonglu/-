.addInfo-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  height: 80rpx;
  border-bottom: 1px solid #eee;
}
.label{
  margin-left: 40rpx;
}
.input{
  flex: 1;
  padding: 20rpx;
}
.group{
  display: flex;
  justify-content: center;
