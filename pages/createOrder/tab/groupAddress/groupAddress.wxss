  border-radius: 30rpx;
}
.avatar{
  width: 70rpx;
  height: 70rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  background: red;
  line-height: 70rpx;
  text-align: center;
  color: #ffffff;
  font-size: 25rpx;
}
.right{
  flex: 1;
