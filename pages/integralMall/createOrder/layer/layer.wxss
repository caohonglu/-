.mask{
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 100vh;
  background: rgba(0, 0, 0, .5);
}
.layer{
  width: 350rpx;
  background: #ffffff;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-flow: column wrap;
  box-sizing: border-box;
  padding: 32rpx;
  font-size: 28rpx;
  position: absolute;
  top: 25%;
}

.btn{
  border-radius: 50rpx;
  width: 250rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.content{
  text-align: center;
  font-size: 26rpx;
  font-weight: 600rpx;
  margin: 20rpx 0 34rpx 0;
}
.content-price{
  font-size: 56rpx;
  color: red;
  margin: 22rpx 0 40rpx 0;
}
.ok, .err{
  border: 1px solid red;
  color: red;
}

.yes{
  background: red;
  color: #ffffff;
}