page{
  background: #f5f5f5;
}
.willGroup-top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: red;
  padding: 34rpx 50rpx;
  color: #ffffff;
}
.top-left{}
.left-top{
  display: flex;
  align-items: center;
}
.top-icon{
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  margin-right: 18rpx;
}
.top-text{
  font-size: 40rpx;
}
.top-time{
  font-size: 28rpx;
  text-align: right;
  margin-top: 14rpx;
}
.top-clock{
  width: 134rpx;
  height: 134rpx;
}


.willGroup-goods{
  display: flex;
  margin: 24rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
}
.good-img{
  width: 230rpx;
  height: 230rpx;
  margin-right: 24rpx;
}
.good-content{
  display: flex;
  overflow: hidden;
  flex: 1;
  height: 230rpx;
  justify-content: space-between;
  align-items: flex-start;
  flex-flow: column wrap;
}
.good-name{
  font-size: 30rpx;
  font-weight: bold;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.good-property{
  font-size: 24rpx;
  color: #828282;
}
.content-top{
  overflow: hidden;
  width: 100%;
}
.content-footer{
  display: flex;
  align-items: baseline;
}
.good-price{
  font-size: 40rpx;
  color: red;
}
.good-price::before{
  content: '￥';
  font-size: 28rpx;
}
.good-linePrice{
  font-size: 24rpx;
  color: #c3c3c3;
}

/*拼团人数*/
.willGroup-info{
  background: #ffffff;
  padding: 36rpx;
}
.info-top{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 52rpx 0;
}
.info-avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #c3c3c3;
  margin-right: 50rpx;
}
.info-avatar:last-child{
  margin-right: 0;
}
.leader{
  border: 1px solid #ff9800;
  position: relative;
  box-sizing: border-box;
}
.leader::after{
  content: '拼主';
  color: #ffffff;
  background: #ff9800;
  padding: 5rpx 10rpx;
  position: absolute;
  top: 2rpx;
  left: -14rpx;
  font-size: 20rpx;
  display: block;
  border-radius: 50rpx;
}
.info-text{
  text-align: center;
  margin-bottom: 46rpx;
  font-size: 24rpx;
  color: #ff9800;
}
.info-btn{
  width: 400rpx;
  height: 68rpx;
  font-size: 28rpx;
  color: #ffffff;
  background: red;
  border-radius: 50rpx;
}