page{
  background: #f5f5f5;
}
.order-header{
  display: flex;
  background: #ffffff;
}
.header-item{
  flex: 1;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 96rpx;
  font-size: 32rpx;
}
.bind{
  color: red;
}
.bind::after{
  content: '';
  display: block;
  height: 2px;
  width: 96rpx;
  background: red;
  position: absolute;
  bottom: 0;
}
/*订单样式*/
.order-list{
  padding: 24rpx;
}
.order-list-item{
  overflow: hidden;
  background: #ffffff;
  padding: 28rpx 24rpx 26rpx 28rpx;
  margin-bottom: 24rpx;
}
.item-top{
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.item-goodsimg{
  width: 190rpx;
  height: 190rpx;
  margin-right: 32rpx;
}
.item-content{
  flex: 1;
  height: 190rpx;
  position: relative;
}
.item-name{
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item-property{
  background: #f9f9f9;
  font-size: 24rpx;
  color: #999999;
  margin-top: 10rpx;
}
.item-content-footer{
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  position: absolute;
  width: 100%;
  bottom: 0;
}
.item-price{
  color: red;
  font-size: 32rpx;
}
.item-price::before{
  content: '￥';
  font-size: 24rpx;
}
.item-number{
  font-size: 28rpx;
  color: #999999;
}
.item-number::before{
  content: 'x';
  font-size: 24rpx;
}
.item-bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 28rpx;
}
.bottom-left{
  flex: 1;
}
.item-avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.bottom-right{

}
.item-btn{
  width: 238rpx;
  height: 48rpx;
  font-size: 28rpx;
  color: #ffffff;
  line-height: 48rpx;
  border-radius: 50rpx;
}
.item-poor{
  color: red;
}
.will{
  color: #ffffff;
  background: #ffa218;
  display: flex;
  justify-content: center;
}
.ok{
  background: #259b24;
}
.err{
  background: red;
}