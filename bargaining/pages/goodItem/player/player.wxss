.groupPlayer{
  background: #ffffff;
  margin: 10rpx 0;
  padding: 34rpx 24rpx;
}
.groupPlayer-header{
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}
.groupPlayer-header-item{
  font-size: 32rpx;
}
.groupPlayer-header-more{
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  right: 0;
}
.groupPlayer-header-more-text{
  font-size: 24rpx;
  margin-right: 10rpx;
  color: #aaa;
}
.groupPlayer-header-more-icon{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.groupPlayer-content{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 32rpx;
}
.groupPlayer-content-item{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}
.item-icon{
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.item-text{
  font-size: 24rpx;
  flex: 1;
  color: #B5B5B5;
}
.groupPlayer-content-item:last-child{
  margin-right: 0rpx;
}