/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.page{
  padding-bottom:120rpx;
  position:relative;
}

.copyright{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 45rpx;
  flex-flow: column nowrap;
  color: #bbb;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.copyright-item{
  width: 210rpx;
  height: 88rpx;
  margin-bottom: 10rpx;
}

.canvas{
  width: 750rpx;
  height: 750rpx;
  background: #eeeeee;
  position: absolute;
  top: 80rpx;
  left: 0;
  z-index: -1;
}

button{
  padding: 0;
}
button::after{
  border: none;
}
