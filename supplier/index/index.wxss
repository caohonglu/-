page{
  background: #f5f5f5;
}
.header{
  position: relative;
  overflow: hidden;
  width: 750rpx;
  height: 600rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  z-index: -1;
}
.header-bg{
  width: 750rpx;
  height: 600rpx;
  background: yellow;
  display: inherit;
}
.header-content{
  position: absolute;
  width: inherit;
  box-sizing: border-box;
  background: linear-gradient(to bottom,rgba(0, 0, 0, 0.0),rgba(0, 0, 0, 1));
  bottom: 0;
  height: inherit;
  padding: 352rpx 16rpx 160rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.header-avatar{
  background: pink;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 14rpx;
}
.header-info{
  flex: 1;
}
.header-name{
  font-size: 36rpx;
  line-height: 56rpx;
  margin-bottom: 10rpx;
  color: #ffffff;
  font-weight: 600;
}
.header-label{
  display: flex;
  line-height: 28rpx;
}
.label-item{
  display: flex;
  font-size: 20rpx;
  color: #13d505;
}
.label-item image{
  width: 20rpx;
  height: 20rpx;
}
.header-nav{
  color: #ffffff;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  border: 1px solid #ffffff;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.classification{
  height: 200rpx;
  background: #ffffff;
  margin: -120rpx 22rpx 24rpx 22rpx;
  width: 706rpx;
  padding: 30rpx 40rpx 20rpx 40rpx;
  box-sizing: border-box;
  white-space: nowrap;
  overflow: hidden;
}
.classification-item{
  display: inline-block;
  margin-right: 40rpx;
}
.classification-icon{
  width: 100rpx;
  height: 100rpx;
  background: red;
  border-radius: 50%;
}
.classification-name{
  font-size: 28rpx;
  text-align: center;
}

.goods-list{
  display: flex;
  margin: 0 21rpx 24rpx 21rpx;
  padding: 24rpx 20rpx 24rpx 22rpx;
  background: #ffffff;
}
.goods-img{
  width: 250rpx;
  height: 250rpx;
  background: orange;
  margin-right: 24rpx;
}
.goods-content{
  flex: 1;
  overflow: hidden;
  position: relative;
}
.goods-name{
  font-weight: 600;
  font-size: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.goods-shortname{
  font-size: 24rpx;
  color: #777777;
  margin: 12rpx 0 20rpx 0;
}
.goods-slod{
  color: #ff3a3a;
  background: #ffe8e8;
  display: inline-block;
  padding: 2rpx 16rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
}
.goods-footer{
  display: flex;
  position: absolute;
  bottom: 0;
  width: 100%;
  align-items: flex-end;
}
.goods-price{
  display: flex;
  flex: 1;
  align-items: baseline;
}
.goods-price view:first-child{
  color: red;
  font-weight: 600;
  font-size: 35rpx;
}
.goods-price view:first-child::before{
  content: '￥';
  font-size: 28rpx;
}
.goods-price view:last-child{
  color: #c3c3c3;
  font-weight: 600;
  font-size: 24rpx;
  text-decoration: line-through;
}
.goods-price view:last-child::before{
  content: '￥';
  font-size: 24rpx;
}
.goods-btn{
  background: #ff3a3a;
  color: #ffffff;
  font-size: 24rpx;
  padding: 8rpx 20rpx 6rpx 22rpx;
  border-radius: 50rpx;
}